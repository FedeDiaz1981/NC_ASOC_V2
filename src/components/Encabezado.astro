---
interface Props {
  pretitle?: string;
  title?: string;
  lemaStrong?: string;
  lema?: string;
  bgImage?: string;      // ruta en /public (ej: /images/hero.webp)
  logo?: string;
  heightClass?: string;  // ej: "min-h-[72vh] md:min-h-[78vh] lg:min-h-[86vh]"
  overlay?: string;      // ej: "bg-azulProfundo/80"
  offsetTop?: string;    // ej: "top-[64px]" si el header es sticky
}

const {
  pretitle = "ESTUDIO JURÍDICO",
  title = "FROIMOVICI & ASOCIADOS",
  lemaStrong = "PARA ANUNCIAR QUE JEHOVÁ MI FORTALEZA ES RECTO,",
  lema = "Y QUE EN ÉL NO HAY INJUSTICIA",
  bgImage = "/images/hero.jpg",
  logo = "/images/logo-dorado.svg",
  heightClass = "min-h-[72vh] md:min-h-[78vh] lg:min-h-[86vh]",
  overlay = "bg-azulProfundo/80",
  offsetTop = "top-0",
} = Astro.props as Props;
---

<section class={`relative isolate ${heightClass} flex items-center justify-center text-hueso overflow-hidden`} aria-label="Encabezado del sitio">
  <!-- Fondo fijo detrás (robusto en iOS) -->
  <div aria-hidden="true"
       class={`fixed left-0 right-0 ${offsetTop} bottom-0 -z-10 bg-center bg-cover bg-no-repeat`}
       style={`background-image:url('${bgImage}');`}>
  </div>

  <!-- Capa de oscurecimiento para legibilidad -->
  <div class={`fixed left-0 right-0 ${offsetTop} bottom-0 -z-10 ${overlay}`}></div>

  <!-- Viñetas / degradados sutiles -->
  <div class="pointer-events-none absolute inset-0 -z-0">
    <div class="absolute inset-x-0 top-0 h-24 bg-gradient-to-b from-black/20 to-transparent"></div>
    <div class="absolute inset-x-0 bottom-0 h-24 bg-gradient-to-t from-black/20 to-transparent"></div>
  </div>

  <!-- Contenido centrado -->
  <div class="relative z-10 w-full max-w-6xl px-4 md:px-6 text-center">
    <p class="text-[16px] sm:text-sm md:text-2xl tracking-[0.25em] uppercase text-hueso/90 after:content-[''] after:block after:h-[2px] after:w-28 after:bg-beige after:mx-auto after:mt-2">
      {pretitle}
    </p>

    <h1 class="mt-5 text-3xl sm:text-3xl md:text-4xl lg:text-5xl font-extrabold tracking-wide drop-shadow-[0_1px_0_rgba(0,0,0,0.25)]">
      {title}
    </h1>

    {logo && (
      <div class="mt-8 md:mt-10">
        <img src={logo} alt="Emblema" class="mx-auto h-16 sm:h-22 md:h-[11rem] w-auto rounded-xl md:rounded-3xl border-4 border-[#3e5f73] shadow-sm" />
      </div>
    )}

    <div class="mt-6 md:mt-8">
      <p class="text-[15px] sm:text-sm md:text-xl font-semibold tracking-wide">
        {lemaStrong}
      </p>
      <p class="mt-1 text-[13px] sm:text-sm md:text-xl text-hueso/90">
        {lema}
      </p>
    </div>

    <div class="mt-8 md:mt-10">
      <slot />
    </div>
  </div>
</section>
